	private List<Empresa> listaEmpresas;

	
	
    public EmpresaDAO () {
    	
    	
    	ef = Persistence.createEntityManagerFactory("sistemaLoja");
    	
    	e = ef.createEntityManager();
    	
    }	
	
    
    public void listar() {
    	
    	  
    	
    	
    }


	public List<Empresa> getListaEmpresas() {
		return listaEmpresas;
